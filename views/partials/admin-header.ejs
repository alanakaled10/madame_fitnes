<!-- Admin Header Responsivo -->
<header class="bg-dark text-nude-light shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Logo e Titulo -->
            <div class="flex items-center space-x-3">
                <img src="/img/logo/logo.jpg" alt="Madame Modas" class="h-10 w-10 rounded-full">
                <span class="font-serif text-lg sm:text-xl">Painel Admin</span>
            </div>

            <!-- Desktop Navigation -->
            <nav class="hidden md:flex items-center space-x-4 lg:space-x-6">
                <a href="/admin" class="hover:text-rose-light transition-colors <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'font-medium text-rose-light' : '' %>">
                    Dashboard
                </a>
                <a href="/admin/produtos" class="hover:text-rose-light transition-colors <%= typeof activePage !== 'undefined' && activePage === 'produtos' ? 'font-medium text-rose-light' : '' %>">
                    Produtos
                </a>
                <a href="/admin/configuracoes" class="hover:text-rose-light transition-colors <%= typeof activePage !== 'undefined' && activePage === 'config' ? 'font-medium text-rose-light' : '' %>">
                    Config
                </a>
                <a href="/" target="_blank" class="hover:text-rose-light transition-colors">
                    Ver Loja
                </a>
                <a href="/admin/logout" class="bg-nude-light/20 px-4 py-2 rounded-lg hover:bg-nude-light/30 transition-colors">
                    Sair
                </a>
            </nav>

            <!-- Mobile Menu Button -->
            <button onclick="toggleAdminMenu()" class="md:hidden p-2 rounded-lg hover:bg-nude-light/10 transition-colors" aria-label="Menu">
                <svg id="menuIconOpen" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                <svg id="menuIconClose" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation -->
        <nav id="adminMobileMenu" class="hidden md:hidden pb-4 border-t border-nude-light/10 mt-2 pt-4">
            <div class="flex flex-col space-y-2">
                <a href="/admin" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-nude-light/10 transition-colors <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'bg-nude-light/10 font-medium' : '' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/produtos" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-nude-light/10 transition-colors <%= typeof activePage !== 'undefined' && activePage === 'produtos' ? 'bg-nude-light/10 font-medium' : '' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                    <span>Produtos</span>
                </a>
                <a href="/admin/configuracoes" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-nude-light/10 transition-colors <%= typeof activePage !== 'undefined' && activePage === 'config' ? 'bg-nude-light/10 font-medium' : '' %>">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span>Configuracoes</span>
                </a>
                <a href="/" target="_blank" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-nude-light/10 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    <span>Ver Loja</span>
                </a>
                <div class="border-t border-nude-light/10 pt-2 mt-2">
                    <a href="/admin/logout" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-red-500/20 hover:bg-red-500/30 transition-colors text-red-200">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                        <span>Sair</span>
                    </a>
                </div>
            </div>
        </nav>
    </div>
</header>

<script>
    function toggleAdminMenu() {
        const menu = document.getElementById('adminMobileMenu');
        const iconOpen = document.getElementById('menuIconOpen');
        const iconClose = document.getElementById('menuIconClose');

        menu.classList.toggle('hidden');
        iconOpen.classList.toggle('hidden');
        iconClose.classList.toggle('hidden');
    }
</script>
