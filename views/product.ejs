<%- include('partials/header') %>

<!-- Header -->
<header class="fixed top-0 left-0 right-0 z-50 bg-nude-light/95 backdrop-blur-md border-b border-nude-dark/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            <!-- Back Button -->
            <a href="/" class="flex items-center text-dark hover:text-dark-soft transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                <span class="font-medium">Voltar</span>
            </a>

            <!-- Logo -->
            <a href="/" class="flex items-center justify-center">
                <img src="/img/logo/logo.jpg" alt="<%= settings.storeName %>"
                     class="h-12 w-12 rounded-full object-cover border-2 border-nude-dark">
            </a>

            <!-- Placeholder for alignment -->
            <div class="w-20"></div>
        </div>
    </div>
</header>

<!-- Product Details -->
<main class="pt-28 pb-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Image/Video Gallery -->
            <div class="space-y-4">
                <!-- Main Media -->
                <div class="aspect-[3/4] rounded-2xl overflow-hidden bg-white shadow-lg">
                    <img id="mainImage" src="<%= product.image %>"
                         alt="<%= product.name %>"
                         class="w-full h-full object-cover cursor-zoom-in"
                         onclick="openImageModal(this.src)">
                    <video id="mainVideo" class="w-full h-full object-cover hidden" controls>
                        <source src="" type="video/mp4">
                    </video>
                </div>

                <!-- Thumbnails (Images + Videos) -->
                <%
                    const allMedia = [];
                    if (product.images) {
                        product.images.forEach(img => allMedia.push({ type: 'image', src: img }));
                    }
                    if (product.videos) {
                        product.videos.forEach(vid => allMedia.push({ type: 'video', src: vid }));
                    }
                %>
                <% if (allMedia.length > 1) { %>
                    <div class="grid grid-cols-4 gap-3">
                        <% allMedia.forEach((media, index) => { %>
                            <% if (media.type === 'image') { %>
                                <button onclick="showImage('<%= media.src %>')"
                                        class="media-thumb aspect-square rounded-lg overflow-hidden bg-white shadow border-2 hover:border-dark transition-colors <%= index === 0 ? 'border-dark' : 'border-transparent' %>">
                                    <img src="<%= media.src %>" alt="<%= product.name %> - Foto"
                                         class="w-full h-full object-cover">
                                </button>
                            <% } else { %>
                                <button onclick="showVideo('<%= media.src %>')"
                                        class="media-thumb aspect-square rounded-lg overflow-hidden bg-white shadow border-2 border-transparent hover:border-dark transition-colors relative">
                                    <video src="<%= media.src %>" class="w-full h-full object-cover" muted></video>
                                    <div class="absolute inset-0 flex items-center justify-center bg-dark/30">
                                        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M8 5v14l11-7z"/>
                                        </svg>
                                    </div>
                                </button>
                            <% } %>
                        <% }); %>
                    </div>
                <% } %>
            </div>

            <!-- Product Info -->
            <div class="lg:sticky lg:top-28 lg:self-start space-y-6">
                <!-- Category Badge -->
                <span class="inline-block bg-nude text-dark text-sm font-medium px-4 py-2 rounded-full">
                    <%= product.categoryLabel %>
                </span>

                <!-- Product Name -->
                <h1 class="font-serif text-3xl sm:text-4xl text-dark leading-tight">
                    <%= product.name %>
                </h1>

                <!-- Price -->
                <div class="flex items-baseline space-x-2">
                    <span class="font-serif text-4xl text-dark">
                        R$ <%= product.price.toFixed(2).replace('.', ',') %>
                    </span>
                </div>

                <!-- Divider -->
                <div class="w-full h-px bg-nude-dark"></div>

                <!-- Description -->
                <div class="space-y-4">
                    <h2 class="font-medium text-dark text-lg">Descricao</h2>
                    <p class="text-dark-soft/70 leading-relaxed">
                        <%= product.fullDescription || product.description %>
                    </p>
                </div>

                <!-- Sizes -->
                <% if (product.sizes && product.sizes.length > 0) { %>
                    <div class="space-y-4">
                        <h2 class="font-medium text-dark text-lg">Tamanhos Disponiveis</h2>
                        <div class="flex flex-wrap gap-2">
                            <% product.sizes.forEach(size => { %>
                                <span class="px-4 py-2 border border-dark/20 rounded-lg text-dark text-sm font-medium hover:bg-nude transition-colors cursor-pointer">
                                    <%= size %>
                                </span>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <!-- CTA Buttons -->
                <div class="space-y-3 pt-4">
                    <button onclick="sendWhatsApp('<%= product.name %>', '<%= product.categoryLabel %>')"
                            class="w-full bg-dark text-nude-light py-4 rounded-full font-medium text-lg tracking-wide flex items-center justify-center space-x-3 hover:bg-dark-soft transition-colors">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                        </svg>
                        <span>Quero Este Produto!</span>
                    </button>

                    <a href="/"
                       class="block w-full bg-nude text-dark py-4 rounded-full font-medium text-lg tracking-wide text-center hover:bg-nude-dark transition-colors">
                        Continuar Comprando
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Image Modal -->
<div id="imageModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/90" onclick="closeImageModal()">
    <button class="absolute top-4 right-4 text-white hover:text-nude transition-colors">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
    </button>
    <img id="modalImage" src="" alt="<%= product.name %>" class="max-w-full max-h-full object-contain p-4">
</div>

<!-- WhatsApp Float Button -->
<a href="https://wa.me/<%= settings.whatsappNumber %>" target="_blank"
   class="fixed bottom-6 right-6 bg-green-500 text-white p-4 rounded-full shadow-lg hover:bg-green-600 transition-all z-50 hover:scale-110">
    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
    </svg>
</a>

<script>
    const whatsappNumber = '<%= settings.whatsappNumber %>';

    function sendWhatsApp(productName, category) {
        const message = encodeURIComponent(`Ola, tenho interesse no produto ${productName} da categoria ${category}.`);
        window.open(`https://wa.me/${whatsappNumber}?text=${message}`, '_blank');
    }

    function showImage(src) {
        const mainImage = document.getElementById('mainImage');
        const mainVideo = document.getElementById('mainVideo');

        // Show image, hide video
        mainImage.src = src;
        mainImage.classList.remove('hidden');
        mainVideo.classList.add('hidden');
        mainVideo.pause();

        // Update thumbnail borders
        updateThumbBorders();
    }

    function showVideo(src) {
        const mainImage = document.getElementById('mainImage');
        const mainVideo = document.getElementById('mainVideo');

        // Hide image, show video
        mainImage.classList.add('hidden');
        mainVideo.querySelector('source').src = src;
        mainVideo.load();
        mainVideo.classList.remove('hidden');
        mainVideo.play();

        // Update thumbnail borders
        updateThumbBorders();
    }

    function updateThumbBorders() {
        document.querySelectorAll('.media-thumb').forEach(btn => {
            btn.classList.remove('border-dark');
            btn.classList.add('border-transparent');
        });
        if (event && event.currentTarget) {
            event.currentTarget.classList.remove('border-transparent');
            event.currentTarget.classList.add('border-dark');
        }
    }

    function changeMainImage(src) {
        showImage(src);
    }

    function openImageModal(src) {
        const modal = document.getElementById('imageModal');
        const modalImage = document.getElementById('modalImage');
        modalImage.src = src;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        document.body.style.overflow = 'hidden';
    }

    function closeImageModal() {
        const modal = document.getElementById('imageModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = '';
    }

    // Close modal on escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeImageModal();
    });
</script>

<%- include('partials/footer') %>
