<%- include('../partials/header') %>

<div class="min-h-screen bg-nude-light">
    <!-- Admin Header -->
    <% activePage = 'produtos' %>
    <%- include('../partials/admin-header') %>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
        <!-- Header -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 sm:mb-8 gap-4">
            <div>
                <h1 class="font-serif text-2xl sm:text-3xl text-dark mb-1 sm:mb-2">Produtos</h1>
                <p class="text-dark-soft/60 text-sm sm:text-base">Gerencie todos os produtos do catálogo</p>
            </div>
            <a href="/admin/produtos/novo"
               class="inline-flex items-center justify-center bg-dark text-nude-light px-5 sm:px-6 py-2.5 sm:py-3 rounded-lg font-medium hover:bg-dark-soft transition-colors text-sm sm:text-base">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Novo Produto
            </a>
        </div>

        <!-- Success/Error Messages -->
        <% if (success) { %>
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-4 sm:mb-6 text-sm sm:text-base">
                <%= success %>
            </div>
        <% } %>
        <% if (error) { %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 sm:mb-6 text-sm sm:text-base">
                <%= error %>
            </div>
        <% } %>

        <!-- Filters -->
        <div class="flex flex-wrap gap-2 mb-4 sm:mb-6">
            <a href="/admin/produtos?category=all"
               class="px-3 sm:px-4 py-1.5 sm:py-2 rounded-full text-xs sm:text-sm font-medium border <%= activeCategory === 'all' ? 'bg-dark text-nude-light' : 'border-dark/20 hover:bg-nude' %> transition-colors">
                Todos
            </a>
            <a href="/admin/produtos?category=fitness"
               class="px-3 sm:px-4 py-1.5 sm:py-2 rounded-full text-xs sm:text-sm font-medium border <%= activeCategory === 'fitness' ? 'bg-dark text-nude-light' : 'border-dark/20 hover:bg-nude' %> transition-colors">
                Roupas Fitness
            </a>
            <a href="/admin/produtos?category=suplementos"
               class="px-3 sm:px-4 py-1.5 sm:py-2 rounded-full text-xs sm:text-sm font-medium border <%= activeCategory === 'suplementos' ? 'bg-dark text-nude-light' : 'border-dark/20 hover:bg-nude' %> transition-colors">
                Suplementos
            </a>
        </div>

        <!-- Products -->
        <% if (products.length === 0) { %>
            <div class="bg-white rounded-xl shadow-sm p-8 text-center">
                <svg class="w-12 h-12 mx-auto text-dark-soft/30 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
                <p class="text-dark-soft/60">Nenhum produto encontrado.</p>
                <a href="/admin/produtos/novo" class="inline-block mt-4 text-dark font-medium hover:underline">
                    Adicionar primeiro produto
                </a>
            </div>
        <% } else { %>
            <!-- Mobile: Cards View -->
            <div class="md:hidden space-y-4">
                <% products.forEach(product => { %>
                    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                        <div class="flex items-start p-4 space-x-4">
                            <img src="<%= product.image %>" alt="<%= product.name %>"
                                 class="w-20 h-20 rounded-lg object-cover flex-shrink-0"
                                 onerror="this.src='/img/placeholder.jpg'">
                            <div class="flex-1 min-w-0">
                                <h3 class="font-medium text-dark text-sm line-clamp-1"><%= product.name %></h3>
                                <p class="text-dark-soft/60 text-xs line-clamp-1 mt-1"><%= product.description %></p>
                                <div class="flex items-center gap-2 mt-2">
                                    <span class="bg-nude px-2 py-0.5 rounded-full text-xs">
                                        <%= product.categoryLabel %>
                                    </span>
                                    <span class="font-medium text-dark text-sm">
                                        R$ <%= product.price.toFixed(2).replace('.', ',') %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="border-t border-nude px-4 py-3 flex items-center justify-between bg-nude-light/30">
                            <form action="/admin/produtos/toggle/<%= product._id %>" method="POST" class="inline">
                                <button type="submit"
                                        class="inline-flex items-center px-2.5 py-1 rounded-full text-xs <%= product.active !== false ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600' %>">
                                    <span class="w-1.5 h-1.5 rounded-full mr-1.5 <%= product.active !== false ? 'bg-green-500' : 'bg-gray-400' %>"></span>
                                    <%= product.active !== false ? 'Ativo' : 'Inativo' %>
                                </button>
                            </form>
                            <div class="flex items-center space-x-1">
                                <a href="/produto/<%= product._id %>" target="_blank"
                                   class="p-2 text-dark-soft/60 hover:text-dark hover:bg-nude rounded-lg transition-colors"
                                   title="Visualizar">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                </a>
                                <a href="/admin/produtos/editar/<%= product._id %>"
                                   class="p-2 text-dark-soft/60 hover:text-dark hover:bg-nude rounded-lg transition-colors"
                                   title="Editar">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                </a>
                                <form action="/admin/produtos/excluir/<%= product._id %>" method="POST" class="inline"
                                      onsubmit="return confirm('Tem certeza que deseja excluir este produto?')">
                                    <button type="submit"
                                            class="p-2 text-red-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                                            title="Excluir">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Desktop: Table View -->
            <div class="hidden md:block bg-white rounded-xl shadow-sm overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-nude">
                            <tr>
                                <th class="px-6 py-4 text-left text-sm font-medium text-dark">Produto</th>
                                <th class="px-6 py-4 text-left text-sm font-medium text-dark">Categoria</th>
                                <th class="px-6 py-4 text-left text-sm font-medium text-dark">Preço</th>
                                <th class="px-6 py-4 text-left text-sm font-medium text-dark">Status</th>
                                <th class="px-6 py-4 text-right text-sm font-medium text-dark">Ações</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-nude">
                            <% products.forEach(product => { %>
                                <tr class="hover:bg-nude-light/50 transition-colors">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center space-x-4">
                                            <img src="<%= product.image %>" alt="<%= product.name %>"
                                                 class="w-14 h-14 lg:w-16 lg:h-16 rounded-lg object-cover"
                                                 onerror="this.src='/img/placeholder.jpg'">
                                            <div class="min-w-0">
                                                <p class="font-medium text-dark truncate max-w-[200px] lg:max-w-[280px]"><%= product.name %></p>
                                                <p class="text-dark-soft/60 text-sm line-clamp-1"><%= product.description %></p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="inline-block bg-nude px-3 py-1 rounded-full text-sm">
                                            <%= product.categoryLabel %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="font-medium text-dark">
                                            R$ <%= product.price.toFixed(2).replace('.', ',') %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <form action="/admin/produtos/toggle/<%= product._id %>" method="POST" class="inline">
                                            <button type="submit"
                                                    class="inline-flex items-center px-3 py-1 rounded-full text-sm <%= product.active !== false ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600' %>">
                                                <span class="w-2 h-2 rounded-full mr-2 <%= product.active !== false ? 'bg-green-500' : 'bg-gray-400' %>"></span>
                                                <%= product.active !== false ? 'Ativo' : 'Inativo' %>
                                            </button>
                                        </form>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <div class="flex items-center justify-end space-x-2">
                                            <a href="/produto/<%= product._id %>" target="_blank"
                                               class="p-2 text-dark-soft/60 hover:text-dark hover:bg-nude rounded-lg transition-colors"
                                               title="Visualizar">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                                </svg>
                                            </a>
                                            <a href="/admin/produtos/editar/<%= product._id %>"
                                               class="p-2 text-dark-soft/60 hover:text-dark hover:bg-nude rounded-lg transition-colors"
                                               title="Editar">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                </svg>
                                            </a>
                                            <form action="/admin/produtos/excluir/<%= product._id %>" method="POST" class="inline"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir este produto?')">
                                                <button type="submit"
                                                        class="p-2 text-red-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                                                        title="Excluir">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% } %>
    </main>
</div>

<%- include('../partials/footer') %>
