<%- include('../partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-nude to-nude-light p-4">
    <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-8">
        <!-- Logo -->
        <div class="text-center mb-8">
            <img src="/img/logo/logo.jpg" alt="Madame Modas"
                 class="h-24 w-24 mx-auto rounded-full object-cover border-4 border-nude shadow-lg mb-4">
            <h1 class="font-serif text-2xl text-dark">Area Administrativa</h1>
            <p class="text-dark-soft/60 text-sm mt-2">Acesse sua conta para gerenciar o catalogo</p>
        </div>

        <!-- Error Message -->
        <% if (error) { %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6 text-sm">
                <%= error %>
            </div>
        <% } %>

        <!-- Login Form -->
        <form action="/admin/login" method="POST" class="space-y-6">
            <div>
                <label for="username" class="block text-sm font-medium text-dark mb-2">Usuario</label>
                <input type="text" id="username" name="username" required
                       class="w-full px-4 py-3 border border-nude-dark rounded-lg focus:outline-none focus:ring-2 focus:ring-dark/20 transition-all"
                       placeholder="Digite seu usuario">
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-dark mb-2">Senha</label>
                <input type="password" id="password" name="password" required
                       class="w-full px-4 py-3 border border-nude-dark rounded-lg focus:outline-none focus:ring-2 focus:ring-dark/20 transition-all"
                       placeholder="Digite sua senha">
            </div>

            <button type="submit"
                    class="w-full bg-dark text-nude-light py-3 rounded-lg font-medium hover:bg-dark-soft transition-colors">
                Entrar
            </button>
        </form>

        <!-- Back to Store -->
        <div class="text-center mt-6">
            <a href="/" class="text-dark-soft/60 hover:text-dark text-sm transition-colors">
                â† Voltar para a loja
            </a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
