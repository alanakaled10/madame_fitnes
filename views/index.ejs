<%- include('partials/header') %>

<!-- Header -->
<header class="fixed top-0 left-0 right-0 z-50 bg-nude-light/95 backdrop-blur-md border-b border-nude-dark/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-24">
            <!-- Logo Circular -->
            <a href="/" class="flex items-center justify-center">
                <img src="/img/logo/logo.jpg" alt="<%= settings.storeName %>"
                     class="h-16 w-16 rounded-full object-cover border-2 border-nude-dark shadow-md">
            </a>

            <!-- Navigation Filters -->
            <nav class="hidden md:flex items-center space-x-2">
                <a href="/?category=all"
                   class="filter-btn <%= activeCategory === 'all' ? 'active' : '' %> px-6 py-2.5 rounded-full text-sm font-medium tracking-wide border border-dark/20">
                    Todos
                </a>
                <a href="/?category=fitness"
                   class="filter-btn <%= activeCategory === 'fitness' ? 'active' : '' %> px-6 py-2.5 rounded-full text-sm font-medium tracking-wide border border-dark/20">
                    Roupas Fitness
                </a>
                <a href="/?category=suplementos"
                   class="filter-btn <%= activeCategory === 'suplementos' ? 'active' : '' %> px-6 py-2.5 rounded-full text-sm font-medium tracking-wide border border-dark/20">
                    Suplementos
                </a>
            </nav>

            <!-- Mobile Menu Button -->
            <button onclick="toggleMobileMenu()" class="md:hidden p-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden pb-4">
            <div class="flex flex-col space-y-2">
                <a href="/?category=all"
                   class="filter-btn <%= activeCategory === 'all' ? 'active' : '' %> px-6 py-3 rounded-full text-sm font-medium tracking-wide border border-dark/20 text-center">
                    Todos
                </a>
                <a href="/?category=fitness"
                   class="filter-btn <%= activeCategory === 'fitness' ? 'active' : '' %> px-6 py-3 rounded-full text-sm font-medium tracking-wide border border-dark/20 text-center">
                    Roupas Fitness
                </a>
                <a href="/?category=suplementos"
                   class="filter-btn <%= activeCategory === 'suplementos' ? 'active' : '' %> px-6 py-3 rounded-full text-sm font-medium tracking-wide border border-dark/20 text-center">
                    Suplementos
                </a>
            </div>
        </div>
    </div>
</header>

<!-- Hero Section -->
<section class="pt-36 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-nude to-nude-light">
    <div class="max-w-7xl mx-auto text-center hero-text">
        <div class="mb-8">
            <img src="/img/logo/logo.jpg" alt="<%= settings.storeName %>"
                 class="h-32 w-32 mx-auto rounded-full object-cover border-4 border-white shadow-xl">
        </div>
        <h1 class="font-serif text-4xl sm:text-5xl lg:text-6xl font-light text-dark tracking-tight mb-4">
            <%= settings.storeName %>
        </h1>
        <p class="text-dark-soft/70 text-lg sm:text-xl font-light max-w-2xl mx-auto mb-6 tracking-wide">
            <%= settings.storeSlogan %>
        </p>
        <div class="w-24 h-px bg-dark/30 mx-auto"></div>
    </div>
</section>

<!-- Products Section -->
<section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- Section Title -->
        <div class="text-center mb-12">
            <h2 class="font-serif text-3xl sm:text-4xl font-light text-dark mb-4">Nossa Coleção</h2>
            <p class="text-dark-soft/60 font-light tracking-wide">Peças selecionadas para você</p>
        </div>

        <% if (products.length === 0) { %>
            <!-- Empty State -->
            <div class="text-center py-20">
                <p class="text-dark-soft/60 text-lg">Nenhum produto encontrado nesta categoria.</p>
            </div>
        <% } else { %>
            <!-- Products Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                <% products.forEach((product, index) => { %>
                    <div class="product-card bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl flex flex-col"
                         style="animation-delay: <%= index * 0.1 %>s">
                        <div class="relative overflow-hidden aspect-[3/4]">
                            <img src="<%= product.image %>"
                                 alt="<%= product.name %>"
                                 class="product-image w-full h-full object-cover"
                                 loading="lazy"
                                 onerror="this.src='/img/placeholder.jpg'">
                            <div class="absolute top-4 left-4">
                                <span class="bg-nude text-dark text-xs font-medium px-3 py-1.5 rounded-full">
                                    <%= product.categoryLabel %>
                                </span>
                            </div>
                        </div>
                        <div class="p-6 flex flex-col flex-grow">
                            <h3 class="font-medium text-dark text-lg mb-2 line-clamp-2 h-14"><%= product.name %></h3>
                            <p class="text-dark-soft/60 text-sm mb-4 line-clamp-2"><%= product.description %></p>
                            <div class="mt-auto">
                                <span class="font-serif text-2xl text-dark block mb-4">
                                    R$ <%= product.price.toFixed(2).replace('.', ',') %>
                                </span>
                                <div class="flex gap-2">
                                    <a href="/produto/<%= product._id %>"
                                       class="flex-1 bg-nude hover:bg-nude-dark text-dark py-3 rounded-full font-medium text-sm tracking-wide text-center transition-colors">
                                        Mais Detalhes
                                    </a>
                                    <button onclick="sendWhatsApp('<%= product.name %>', '<%= product.categoryLabel %>')"
                                            class="flex-1 whatsapp-btn bg-dark text-nude-light py-3 rounded-full font-medium text-sm tracking-wide flex items-center justify-center space-x-1">
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                                        </svg>
                                        <span>Comprar</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</section>

