    </svg>
</a>

<!-- Product Modal -->
<div id="productModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 backdrop-blur-sm">
    <div class="bg-white rounded-2xl max-w-4xl w-full mx-4 max-h-[90vh] overflow-y-auto">
        <div id="modalContent"></div>
    </div>
</div>

<script>
    const whatsappNumber = '<%= settings.whatsappNumber %>';

    function sendWhatsApp(productName, category) {
        const message = encodeURIComponent(`Olá, tenho interesse no produto ${productName} da categoria ${category}.`);
        window.open(`https://wa.me/${whatsappNumber}?text=${message}`, '_blank');
    }

    function toggleMobileMenu() {
        const menu = document.getElementById('mobileMenu');
        menu.classList.toggle('hidden');
    }
</script>

<%- include('partials/footer') %>
